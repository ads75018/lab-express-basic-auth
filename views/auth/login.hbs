{{!-- views/layout.hbs --}}
{{!-- nothing gets updated except the navbar --}}

  <nav>
    <ul>
      <li id="to-left">
        <p><a href="/"> Users - demo </a></p>
      </li>
      <li id="to-right">
        <a href="/signup">Signup</a> <span> | </span>
        <a href="/login">Login</a> {{!-- !!! --}}
      </li>
    </ul>
  </nav>

<div id="form">
  <h2>Login</h2>
  <form action="/login" method="POST">
    <label for="input-email">Email</label>
    <input type="email" id="input-email" name="email" placeholder="Your email" />

    <label for="input-password">Password</label>
    <input type="password" name="password" id="input-password" placeholder="********" />

    <button type="submit">Login</button>

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>
